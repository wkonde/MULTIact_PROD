<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="order_lines" name="Sale Order Data">
            <div t-if="doc.project_title" class="col-12" t-attf-style="color:{{style.theme_txt_color}};text-align:center; padding-left:0px; padding-right:0px;">
                <div t-attf-style="width:auto; display:inline-block; background-color:{{style.theme_color}};padding-left:8px; padding-right:8px;">
                    <span t-attf-style="margin-top:8px; margin-bottom:8px;font-size:{{int(style.body_font)+4}}px;"><span t-field="doc.project_title"/></span>
                </div>
            </div>
            <div class="col-12" style="padding:8px;"/>

                <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                <!-- Is there tax on at least one line? -->
            <t t-set="display_taxes" t-value="any([y.tax_id for y in doc.order_line])"/>
                <!-- To take care of columns when no discount -->
            <t t-set="col_span" t-value="8 if display_discount else 7"/>
                <!-- common th styles -->
            <t t-set="th_style" t-value="'border-bottom: 1px solid #ddd !important;white-space:nowrap;'"/>
            <table class="table  table-sm" t-attf-style="color:{{style.text_color}};" >
                <thead t-attf-style="background-color:{{style.theme_color}} !important; page-break-inside: avoid; color:{{style.theme_txt_color}};">
                    <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{style.text_color}} !important;font-size:{{int(style.body_font)+2}}px;">
                        <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"></i> Item</th>
                        <th t-if="style.show_img" t-attf-style="{{th_style}}"><i class="fa fa-camera"></i> Image</th>
                        <th t-attf-style="{{th_style}}"><i class="fa fa-th-large"/> Description</th>
                        <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"/> Quantity</th>
                        <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-tags"/> Unit Price</th>
                        <th t-if="display_discount" class="text-right" t-attf-style="{{th_style}}"  groups="product.group_discount_per_so_line">
                            <i class="fa fa-minus-square"/> Discount(%)</th>
                        <th t-if="display_taxes" class="text-center" t-attf-style="{{th_style}}"><i class="fa fa-pencil-square"/> Taxes</th>
                        <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-money"/>
                            <t groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                            <t groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                        </th>

                    </tr>
                </thead>
                <tbody>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="item_count" t-value="0"/>
                    <t t-foreach="doc.order_line" t-as="l">
                        <t t-set="item_count" t-value="item_count + 1"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + l.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + l.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                        <tr t-attf-style="background-color:{{style.odd if (l_parity in 'odd') else style.even}}; page-break-inside: avoid">
                            <t t-if="not l.display_type">
                                <td>
                                    <span  t-esc="item_count"/>
                                </td>
                                <td t-if="style.show_img"><span itemprop="image" t-field="l.sudo().product_id.image_128" t-options='{"widget": "image"}'/></td>
                                <td><span t-field="l.name"/></td>
                                <td class="text-right">
                                    <span t-field="l.product_uom_qty"/>
                                    <span t-field="l.product_uom"  groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"  t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                                <td t-if="display_discount" class="text-right"  groups="product.group_discount_per_so_line"><span t-field="l.discount"/></td>
                                <td t-if="display_taxes" class="text-center">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="l.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>

                            <t t-if="l.display_type == 'line_section'">
                                <td t-att-colspan="col_span">
                                    <span t-field="l.name"/>
                                </td>
                                <t t-set="current_section" t-value="l"/>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="item_count" t-value="0"/>
                            </t>
                            <t t-if="l.display_type == 'line_note'">
                                <td t-att-colspan="col_span">
                                    <span t-field="l.name"/>
                                </td>
                                <t t-set="item_count" t-value="item_count - 1"/>
                            </t>
                        </tr>
                        <t t-if="current_section and (l_last or doc.order_line[l_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td t-att-colspan="col_span">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                        />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            <div class="clearfix" style="page-break-inside: avoid !important;">
                <div class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr  t-attf-style="border-top: 1px solid {{style.text_color}};">
                                <td t-attf-style="border-top: 1px solid {{style.text_color}} !important;"><strong>Subtotal</strong></td>
                                <td class="text-right" t-attf-style="border-top: 1px solid {{style.text_color}} !important;">
                                    <span t-field="doc.amount_untaxed"/>
                                </td>
                            </tr>
                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr  t-attf-style="border-top: 1px solid {{style.text_color}};">
                                    <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                        </td>
                                        <td name="td_amount_by_group_3" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-else ="">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr  t-attf-style="border-bottom: 1px solid {{style.text_color}};">
                                <td t-attf-style="border-top: 1px solid {{style.text_color}} !important;"><strong>Total</strong></td>
                                <td class="text-right" t-attf-style="border-top: 1px solid {{style.text_color}} !important;">
                                    <span style="font-weight:bold; text-decoration:underline;"  t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-6 float-left" style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
                <p t-if="doc.payment_term_id.note">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
                <p id="payment_term" t-if="not doc.payment_term_id and doc.partner_id.property_payment_term_id">
                    <span t-field="doc.partner_id.property_payment_term_id.note"/>
                </p>

                <p t-if="doc.fiscal_position_id.note">
                    <strong>Fiscal Position Remark:</strong> <span t-field="doc.fiscal_position_id.note"/>
                </p>
                <p t-if="style.aiw_report">
                    <strong>Amount in Words: </strong><span style="text-decoration:underline;" t-field="doc.amount_words"/>
                </p>
            </div>
            <div class="col-12" style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
                <p t-if="doc.note">
                    <span t-field="doc.note"/>
                </p>
            </div>
            <div t-if="doc.signature" class="row mt32" name="signature" style="page-break-inside: avoid !important;">
                <div class="offset-8 col-4">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8 col-4">
                    <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                </div>
                <div class="offset-8 col-4 text-center">
                    <p t-field="doc.signed_by"/>
                </div>
            </div>
            <div class="col-12 float-left" t-if="doc.sale_order_option_ids and doc.state in ['draft', 'sent']"  style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
                <t t-set="has_option_discount" t-value="any(doc.sale_order_option_ids.filtered(lambda o: o.discount != 0.0))" />
                <h4>
                    <span>Options</span>
                </h4>
                <table class="table table-sm" t-attf-style="color:{{style.text_color}};">
                    <thead t-attf-style="background-color:{{style.theme_color}} !important; page-break-inside: avoid; color:{{style.theme_txt_color}};">
                        <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{style.text_color}} !important;font-size:{{int(style.body_font)+2}}px;">
                            <th class="text-left"><i class="fa fa-th-large"/> Description</th>
                            <th t-if="has_option_discount" groups="product.group_discount_per_so_line" class="text-left"> Discount(%)</th>
                            <th class="text-right"><i class="fa fa-tags"/> Unit Price</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <tr t-foreach="doc.sale_order_option_ids" t-as="opt" t-attf-style="background-color:{{style.odd if (opt_parity in 'odd') else style.even}}; page-break-inside: avoid">
                            <td>
                                <span t-field="opt.name"/>
                            </td>
                            <td t-if="has_option_discount" groups="product.group_discount_per_so_line">
                                <strong t-if="opt.discount != 0.0">
                                    <t t-esc="((opt.discount % 1) and '%s' or '%d') % opt.discount"/>%
                                </strong>
                            </td>
                            <td>
                                <strong class="text-right">
                                    <div t-field="opt.price_unit"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                        t-att-style="opt.discount and 'text-decoration: line-through' or None"
                                        t-att-class="opt.discount and 'text-danger' or None"/>
                                    <div t-if="opt.discount">
                                        <t t-esc="'%.2f' % ((1 - opt.discount / 100.0) * opt.price_unit)"/>
                                    </div>
                                </strong>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </template>
    </data>
</odoo>
